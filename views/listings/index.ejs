<% layout('/layouts/boilerplate') %>
<body>
  <h2 class="mb-3 mt-3">Find your next Home</h2>
  <!-- <form method = "GET" action="/listings/new">
        <button>Add Place</button>
    </form> -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for (let listing of allListings) { %>
    <a class="listing-links" href="/listings/<%= listing._id%>">
      <div class="card col lsting-card card-t">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"><b><%= listing.title %></b></p>
          <p class="card-text">Price: &#8377;<%= listing.price %>/night</p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
