<% layout('/layouts/boilerplate') %>
<body>
  <style>
    #filters {
      margin-top: 1rem;
      display: flex;
      flex-wrap: wrap;
    }

    .filter {
      text-align: center;
      margin-right: 2rem;
    }
  </style>

  <div id="filters">
    <div class="filter">
      <div><i class="fa-solid fa-fire-flame-curved"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Rooms</p>
    </div>
  </div>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of allListings) { %>
    <a class="listing-links" href="/listings/<%= listing._id%>">
      <div class="card col lsting-card card-t">
        <img
          src="<%= listing.image.url %>"
          class="card-img-top"
          alt="listing_image"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text"><b><%= listing.title %></b></p>
          <p class="card-text">Price: &#8377;<%= listing.price %>/night</p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
