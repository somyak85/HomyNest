<% layout('/layouts/boilerplate') %>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h3 class="mb-3">Add a new Place</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          placeholder="Add title"
          name="listing[title]"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          name="listing[description]"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description is required</div>
      </div>

      <div class="mb-3">
        <lable for="image" class="form-label">Upload image</lable>
        <input name="listing[image]" type="file" class="form-control" />
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            placeholder="Enter Price"
            name="listing[price]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input
            placeholder="Enter country"
            name="listing[country]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country is required</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          placeholder="Enter location"
          name="listing[location]"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location is required</div>
      </div>

      <button class="btn btn-dark add-btn mb-3">Add</button>
      <br /><br />
    </form>
  </div>
</div>
