<% layout('/layouts/boilerplate') %>
<div class="row">
  <div class="col-8 offset-2">
    <br />
    <h3 class="mb-3">Add a new Place</h3>
    <form
      method="POST"
      action="/listings"
      novalidate
      class="needs-validation"
      enctype="multipart/form-data"
    >
      <div class="mb-3">
        <lable for="title" class="form-label">Title</lable>
        <input
          placeholder="Add title"
          name="listing[title]"
          type="text"
          class="form-control"
          required
        />
        <div class="valid-feedback">Looks good</div>
      </div>
      <div class="mb-3">
        <lable for="description" class="form-label">Description</lable>
        <textarea
          name="listing[description]"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">Description is required</div>
      </div>

      <div class="mb-3">
        <label for="options" class="form-label">Choose Category</label>
        <select
          name="listing[category]"
          id="options"
          class="form-control"
          required
        >
          <option value="">-- Select Category --</option>
          <option value="Trending">Trending</option>
          <option value="Rooms">Rooms</option>
          <option value="Iconic cities">Iconic cities</option>
          <option value="Beach">Beach</option>
          <option value="Mountains">Mountains</option>
          <option value="Forts">Forts</option>
          <option value="Camping">Camping</option>
          <option value="Farms">Farms</option>
          <option value="Arctic">Arctic</option>
          <option value="Domes">Domes</option>
          <option value="Boats">Boats</option>
          <option value="Amazing Pools">Amazing Pools</option>
          <option value="Boats">Boats</option>
        </select>
        <div class="invalid-feedback">Category is required</div>
      </div>

      <div class="mb-3">
        <label for="images" class="form-label">Upload Images</label>
        <input
          name="listing[images]"
          type="file"
          class="form-control"
          multiple
          required
          onchange="previewMultipleImages(event)"
        />
        <div
          id="imagePreviews"
          class="mt-2"
          style="display: flex; flex-wrap: wrap; gap: 10px"
        ></div>
      </div>

      <div class="row">
        <div class="mb-3 col-md-4">
          <lable for="price" class="form-label">Price</lable>
          <input
            placeholder="Enter Price"
            name="listing[price]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Please enter a valid price</div>
        </div>

        <div class="mb-3 col-md-8">
          <lable for="country" class="form-label">Country</lable>
          <input
            placeholder="Enter country"
            name="listing[country]"
            type="text"
            class="form-control"
            required
          />
          <div class="invalid-feedback">Country is required</div>
        </div>
      </div>

      <div class="mb-3">
        <lable for="location" class="form-label">Location</lable>
        <input
          placeholder="Enter location"
          name="listing[location]"
          type="text"
          class="form-control"
          required
        />
        <div class="invalid-feedback">Location is required</div>
      </div>

      <button class="btn btn-dark add-btn mb-3">Add</button>
      <br /><br />
    </form>
  </div>
</div>

<script>
  function previewMultipleImages(event) {
    const previewContainer = document.getElementById("imagePreviews");
    previewContainer.innerHTML = ""; // Clear existing previews

    const files = event.target.files;

    if (files) {
      for (let i = 0; i < files.length; i++) {
        const file = files[i];
        if (file.type.startsWith("image/")) {
          const img = document.createElement("img");
          img.src = URL.createObjectURL(file);
          img.alt = `Preview ${i + 1}`;
          img.style.width = "100px";
          img.style.height = "100px";
          img.style.objectFit = "cover";
          img.style.border = "1px solid #ddd";
          img.style.borderRadius = "4px";
          previewContainer.appendChild(img);
        }
      }
    }
  }
</script>
